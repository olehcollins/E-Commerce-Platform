{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"typeRoots": ["./node_modules/@types", "./types"]
	},
	"include": ["src/**/*.ts", ".env", "src/test.ts"],
	"exclude": ["node_modules"]
}
